<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="SignUpMainPage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ContractorEx.SignUpMainPage">
    <ContentPage.Content>
     
    
     <StackLayout  Spacing="20">

            <Label Text="Mad Man Photography"/>
        
        <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
        
        <StackLayout Padding="20,0,20,0">
          
            <StackLayout Orientation = "Horizontal" Spacing="20">
                
                <Button Text = "Like"/>
                <Button Text = "Comment"/>
                <Button Text = "Share" />
                
            </StackLayout>
         <Button x:Name="Return" Text="Get me the FUCK BACK!!!" Clicked="Handle_Clicked"  />   
            
            
            <BoxView 
            Color="#f0f0f0"
            HeightRequest="1"/>
        
            <Label Text="700 Likes" 
                FontAttributes="Bold"/>
            
            <Label  TextColor = "Gray"
                Text="{Binding textMessage}"
                x:Name="textMessage"/>
        
        </StackLayout>  

        
        
    </StackLayout>   
        
        
        
        
        
    </ContentPage.Content>
</ContentPage>
